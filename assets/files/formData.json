[
    {
        "id": "prj",
        "title": "Original Project",
        "fields": [
            {
                "label": "Project No",
                "id": "project-no",
                "type": "text" ,
                "class": "uppercase",
                "onChange": "handleProjectChange",
                "mapping": "PRJ_NO",
                "name": "INQ_PRJNO"
            },
            { "label": "Project Name", "id": "project-name", "type": "text" , "mapping": "PRJ_NAME", "name": "INQ_PRJNAME"},
            { "label": "Shop Order", "id": "shop-order", "type": "text" , "mapping": "ORDER_NO", "name": "INQ_SHOPORDER"},
            { "label": "Series", "id": "series", "type": "select", "source": "getSeries" , "mapping": "SERIES", "name": "INQ_SERIES"},
            { "label": "Operation", "id": "operation", "type": "text" , "mapping": "OPERATION", "name": "INQ_OPERATION"},
            { "label": "Spec", "id": "spec", "type": "text" , "mapping": "SPEC", "name": "INQ_SPEC"},
            { "label": "Schedule", "id": "schedule", "type": "text" , "mapping": "AMEC_SCHDL", "name": "INQ_PRDSCH"}
        ]
    },
    {
        "id": "info",
        "title": "Inquiry Information",
        "fields": [
            { "label": "Inquiry No.", "id": "inquiry-no", "type": "text", "class": "uppercase req-1 req-2", "onChange": "handleInquiryChange", "name": "INQ_NO"},
            { "label": "Revision", "id": "revision", "type": "readonly", "class": "uppercase req-1 req-2", "value": "*", "name": "INQ_REV" },
            { "label": "Inquiry Date", "id": "inquiry-date", "type": "date", "onLoad": "setCurrentDate" , "name": "INQ_DATE"},
            { "label": "Trader", "id": "trader", "type": "select",  "source": "getTraders" , "name": "INQ_TRADER" },
            { "label": "Agent", "id": "agent", "type": "select", "source": "getAgent", "mapping": "AGENT", "name": "INQ_AGENT" },
            { "label": "Country", "id": "country", "type": "select", "source": "getCountries", "mapping": "DSTN" , "name": "INQ_COUNTRY"},
            { "label": "Status", "id": "status", "type": "status", "display": "New", "value": "2" , "name": "INQ_STATUS", "class": "badge badge-primary text-white"}
        ]
    },
    {
        "id": "mar",
        "title": "Marketing Information",
        "fields": [
            {
                "label": "MAR. In-charge",
                "id":"mar-incharge",
                "type": "staticText",
                "name": "INQ_MAR_PIC",
                "class": "displayname"
            },
            {
                "label": "Weight Require",
                "id": "weight-require",
                "type": "radio",
                "options": [{"value": "1", "text":"Yes"}, {"value": "0", "text":"No"}],
                "name": "INQ_PKC_REQ"
            },
            { "label": "Quotation type", "id": "quotation-type", "type": "select", "source": "getQuoType" , "name": "INQ_QUOTATION_TYPE"},
            { "label": "Delivery Term", "id": "delivery-term", "type": "select", "source": "getDeliveryTerm", "name": "INQ_DELIVERY_TERM" },
            { "label": "Delivery Method", "id": "delivery-method", "type": "select", "source": "getMethod" , "name": "INQ_DELIVERY_METHOD"},
            { "label": "Lead Time", "id": "inq-leadtime","type": "select", "source": "getShipment" , "name": "INQ_SHIPMENT"},
            { "label": "Currency", "id": "currency", "type": "select", "source": "getCurrency", "name": "INQ_CUR"},
            { "label": "Remark", "id": "remark", "type": "textarea" , "name": "INQ_REMARK"}
        ]
    },
    {
        "id": "viewprj",
        "title": "Original Project",
        "fields": [
            { "label": "Project No", "id": "project-no", "type": "staticText", "class": "view-data" , "mapping": "INQ_PRJNO", "name": "INQ_PRJNO"},
            { "label": "Project Name", "id": "project-name", "type": "staticText", "class": "view-data" , "mapping": "INQ_PRJNAME", "name": "INQ_PRJNAME"},
            { "label": "Shop Order", "id": "shop-order", "type": "staticText", "class": "view-data" , "mapping": "INQ_SHOPORDER", "name": "INQ_SHOPORDER"},
            { "label": "Series", "id": "series", "type": "staticText", "class": "view-data", "mapping": "INQ_SERIES", "name": "INQ_SERIES"},
            { "label": "Operation", "id": "operation", "type": "staticText", "class": "view-data" , "mapping": "INQ_OPERATION", "name": "INQ_OPERATION"},
            { "label": "Spec", "id": "spec", "type": "staticText", "class": "view-data", "mapping": "INQ_SPEC", "name": "INQ_SPEC"},
            { "label": "Schedule", "id": "schedule", "type": "staticText", "class": "view-data" , "mapping": "INQ_PRDSCH", "name": "INQ_PRDSCH"}
        ]
    },
    {
        "id": "viewinfo",
        "title": "Inquiry Information",
        "fields": [
            { "label": "Inquiry No.", "id": "inquiry-no", "type": "staticText", "class": "view-data", "mapping": "INQ_NO","name": "INQ_NO" },
            { "label": "Revision", "id": "revision", "type": "staticText", "class": "view-data", "mapping": "INQ_REV","name": "INQ_REV" },
            { "label": "Inquiry Date", "id": "inquiry-date", "type": "staticText", "class": "view-data", "mapping": "INQ_DATE", "name": "INQ_DATE"},
            { "label": "Trader", "id": "trader", "type": "staticText", "class": "view-data",  "mapping": "INQ_TRADER","name": "INQ_TRADER" },
            { "label": "Agent", "id": "agent", "type": "staticText", "class": "view-data", "mapping": "INQ_AGENT", "name": "INQ_AGENT" },
            { "label": "Country", "id": "country", "type": "staticText", "class": "view-data", "mapping": "INQ_COUNTRY" , "name": "INQ_COUNTRY"},
            { "label": "Status", "id": "status", "type": "status", "mapping": "INQ_STATUS", "name": "INQ_STATUS", "class":"badge text-sm"}
